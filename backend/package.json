{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "main.ts",
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "setup:db": "bun run scripts/init-db.ts",
    "dev": "bun --hot main.ts | pino-pretty",
    "build": "bun build ./main.ts --outdir ./prod --target bun",
    "start": "bun prod/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,mjs,json,yaml,yml,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,mjs,json,yaml,yml,md}\"",
    "lint:all": "bun run lint && bun run format:check",
    "fix:all": "bun run lint:fix && bun run format",
    "husky": "husky"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.0.0",
    "backend": "file:",
    "bcrypt": "^6.0.0",
    "discord-oauth2": "^2.12.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^8.2.1",
    "ffmpeg-static": "^5.3.0",
    "google-auth-library": "^10.5.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.17.1",
    "pg-hstore": "^2.3.4",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "request-ip": "^3.3.0",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "^1.3.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pino": "^7.0.4",
    "@types/recursive-readdir": "^2.2.4",
    "@types/request-ip": "^0.0.41",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0"
  }
}
