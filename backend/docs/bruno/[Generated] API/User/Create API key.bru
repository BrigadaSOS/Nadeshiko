meta {
  name: Create API key
  type: http
  seq: 7
}

post {
  url: {{baseUrl}}/v1/user/createApiKey
  body: json
  auth: none
}

body:json {
  {
    "name": "My API Key",
    "permissions": [
      "READ_MEDIA"
    ]
  }
}

settings {
  encodeUrl: true
  timeout: 0
}

script:pre-request {
  const sessionToken = bru.getEnvVar("sessionToken");
  if (sessionToken) {
    req.setHeader("Cookie", "nadeshiko.session_token=" + sessionToken);
  }
}
