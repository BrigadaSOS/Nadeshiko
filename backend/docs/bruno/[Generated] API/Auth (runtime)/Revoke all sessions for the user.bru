meta {
  name: Revoke all sessions for the user
  type: http
  seq: 50
}

post {
  url: {{baseUrl}}/api/auth/revoke-sessions
  body: none
  auth: none
}

settings {
  encodeUrl: true
  timeout: 0
}

script:pre-request {
  const sessionToken = bru.getEnvVar("sessionToken");
  if (sessionToken) {
    req.setHeader("Cookie", "nadeshiko.session_token=" + sessionToken);
  }
}
