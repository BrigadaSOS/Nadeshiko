meta {
  name: Create API key
  type: http
  seq: 14
}

post {
  url: {{baseUrl}}/v1/user/createApiKey
  body: json
  auth: none
}

body:json {
  {
    "name": "My API Key",
    "permissions": [
      "READ_MEDIA"
    ]
  }
}

settings {
  encodeUrl: true
  timeout: 0
}

script:pre-request {
  const jwtToken = bru.getEnvVar("jwtToken");
  if (jwtToken) {
    req.setHeader("Cookie", "access_token=" + jwtToken);
  }
}
